{
  "manifest_version": 3,
  "name": "Dark Mode: Medium",
  "description": "JS to Invert Colors",
  "author": "Marc Santiago",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://www.medium.com/*",
        "https://medium.com/*"
      ],
      "js": ["content.js"]
    }
  ],
    "icons": {
      "16": "icons/logo-medium16.png",
      "48": "icons/logo-medium16.png",
      "128": "icons/logo-medium128.png"
    },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/logo-medium16.png",
      "48": "icons/logo-medium16.png",
      "128": "icons/logo-medium128.png"
    }
  }
}
